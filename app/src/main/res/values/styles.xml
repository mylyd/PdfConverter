<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/themes_color</item>
    </style>

    <!--设置TabLayout字体大小-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="home_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#898B95</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="mine_faq_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_soft_input" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="center_dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--popWindow动画效果-->
    <style name="bottom_dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/translate_out</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
