<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_rating"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_select_style"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/to_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="@string/pdf_to_word"
        android:textColor="#898B95"
        android:textSize="16sp"
        app:drawableLeftCompat="@mipmap/preview_select_word" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <TextView
        android:id="@+id/to_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/pdf_to_img"
        android:textColor="#898B95"
        android:textSize="16sp"
        android:drawablePadding="20dp"
        android:paddingStart="30dp"
        app:drawableLeftCompat="@mipmap/preview_select_img"/>

</LinearLayout>

